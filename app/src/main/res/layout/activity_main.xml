<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#59b7e6">
   <RelativeLayout
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:text="词霸查询"
       android:gravity="center_vertical"
       android:textColor="#433f3f"
       android:textSize="25dp"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/me"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/search_input"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <ImageButton
            android:id="@+id/search_main_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:onClick="SearchResult"
            android:background="@drawable/search"
            />
    <EditText
        android:id="@+id/et_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#433f3f"
        android:textColorHint="#c7c4c4"
        android:hint="请输入您要搜索的单词"
        android:backgroundTint="#38ffffff"
        android:ems="16"/>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">
          <ImageButton
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:background="@drawable/shot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="拍照查词"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="53dp"
                        android:background="@drawable/voice"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="语音搜索"
                        />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="每日一句"
        android:textSize="25dp"
        android:padding="10dp"
        />
        <ImageView
            android:id="@+id/SenVoice"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pron"
            android:layout_marginLeft="10dp"
           />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:orientation="vertical"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="-18dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/SenPic"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_marginLeft="10dp" />

          <TextView
              android:id="@+id/SenE"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="英文例句"
             android:layout_marginLeft="10dp"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp">
              <ImageView
                  android:id="@+id/SenPic2"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_marginLeft="10dp"
                  />
              <TextView
                  android:id="@+id/SenE2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="  英文例句"
                  android:layout_marginLeft="10dp"/>

          </LinearLayout>
          <TextView
              android:id="@+id/tv_SenTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="时间"
              android:layout_gravity="right"
              android:layout_marginRight="25dp"
              android:padding="5dp"/>
      </LinearLayout>
    </LinearLayout>

</LinearLayout>